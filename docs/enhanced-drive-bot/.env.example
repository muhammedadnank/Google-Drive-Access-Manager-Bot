# ═══════════════════════════════════════
# TELEGRAM CREDENTIALS
# ═══════════════════════════════════════
# Get from https://my.telegram.org/apps

API_ID=12345678
API_HASH=your_api_hash_here
BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ═══════════════════════════════════════
# ADMIN CONFIGURATION
# ═══════════════════════════════════════
# Comma-separated Telegram user IDs
# First ID is the super admin

ADMIN_IDS=123456789,987654321,555666777

# ═══════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════
# MongoDB connection string

MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=drive_access_bot

# ═══════════════════════════════════════
# CHANNEL CONFIGURATION (Optional)
# ═══════════════════════════════════════
# Telegram channel for broadcasting
# Get channel ID by forwarding message to @userinfobot

CHANNEL_ID=-1001234567890
CHANNEL_ENABLED=false

# ═══════════════════════════════════════
# FEATURE TOGGLES
# ═══════════════════════════════════════

ENABLE_AUTO_EXPIRE=true
ENABLE_BULK_IMPORT=true
ENABLE_ANALYTICS=true
ENABLE_BROADCAST=true

# ═══════════════════════════════════════
# DEFAULT SETTINGS
# ═══════════════════════════════════════

DEFAULT_ROLE=reader
DEFAULT_EXPIRY_DAYS=30
DEFAULT_PAGE_SIZE=5

# ═══════════════════════════════════════
# NOTIFICATION SETTINGS
# ═══════════════════════════════════════

AUTO_EXPIRE_NOTIFICATIONS=true
GRANT_NOTIFICATIONS=true
REVOKE_NOTIFICATIONS=true

# ═══════════════════════════════════════
# RATE LIMITING
# ═══════════════════════════════════════

RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=10

# ═══════════════════════════════════════
# CACHING
# ═══════════════════════════════════════

CACHE_ENABLED=true
CACHE_TTL=3600

# ═══════════════════════════════════════
# BROADCAST SETTINGS
# ═══════════════════════════════════════

BROADCAST_DELAY=0.5
MAX_BROADCAST_BATCH=100

# ═══════════════════════════════════════
# LOGGING
# ═══════════════════════════════════════

LOG_LEVEL=INFO

# ═══════════════════════════════════════
# DEPLOYMENT (Optional)
# ═══════════════════════════════════════

PORT=8080
HOST=0.0.0.0
